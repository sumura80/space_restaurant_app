<%= simple_form_for(@store, html:{class: 'form-horizontal'}) do |f| %><br>
<%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "choose a planet"}, class: 'form-control', input_html: {class: "dropdown-toggle"} %>
	<div class="form_category">
		<%= f.input :title, label: "Main dish", input_html: {class: "form-control"} %>
		<%= f.input :description, label: "Restaurant Description", input_html: {class: "form-control"} %>
		<%= f.input :company, label: "Restaurant name", input_html: {class: "form-control"} %>
		<%= f.input :url, label: "Restaurant URL", input_html: {class: "form-control"} %>
		<%= f.button :submit,  "Post",:class => 'btn btn-success post_button' %>
		<%= link_to "Back" , root_path,:class => 'btn btn-default post_button' %>
	</div>
<% end %>